#!/usr/bin/env python
import threading, logging, time
from kafka import KafkaProducer

import psutil

class Producer(threading.Thread):
    def __init__(self):
        threading.Thread.__init__(self)
        self.stop_event = threading.Event()
        
    def stop(self):
        self.stop_event.set()

    def run(self):
        producer = KafkaProducer(key_serializer=float.encode, bootstrap_servers='ec2-18-216-219-24.us-east-2.compute.amazonaws.com:9092')

        while not self.stop_event.is_set():
            cpu = str(psutil.cpu_percent(interval=1))
            print(cpu)
            print(type(cpu))
            producer.send('cpu_metric', cpu)
            time.sleep(1)

        producer.close()
        
def main():
    tasks = [
        Producer()    ]

    for t in tasks:
        t.start()

    time.sleep(10)
    
    for task in tasks:
        task.stop()

    for task in tasks:
        task.join()
        
        
if __name__ == "__main__":
    logging.basicConfig(
        format='%(asctime)s.%(msecs)s:%(name)s:%(thread)d:%(levelname)s:%(process)d:%(message)s',
        level=logging.INFO
        )
    main()
